// Grid ////////////////////////////////////////////////////////////////////////

.container {
  display: grid;

  grid-template-areas:
    "nav content"
    "footer footer";

  grid-template-columns: 25% 1fr;
  grid-template-rows: 1fr auto;

  height: 100vh;
}

header {
  grid-area: header;
}

nav {
  grid-area: nav;

  position: fixed;
  height: 100vh;
  width: 25vw;
}

main {
  grid-area: content;
}

footer {
  grid-area: footer;
}

// Responsive //////////////////////////////////////////////////////////////////

@media (max-width: 768px) {
  .container {
    grid-template-areas:
      "header"
      "nav"
      "content"
      "footer";

    grid-template-columns: 1fr;
    grid-template-rows:
      auto // Header
      minmax(75px, auto) // Nav
      1fr // Content
      minmax(75px, auto) // Sidebar
      auto; // Footer
  }

  nav {
    margin: 0;
  }
}

////////////////////////////////////////////////////////////////////////////////

body {
  font: 16px/1.6 Roboto, Helvetica, sans-serif;
  font-weight: 300;
  background-color: #f6f6f6;
}

h1 {
  font-size: 36px;
  text-transform: uppercase;
  font-weight: 400;
  color: #555;
}

// Left Navigation ////////////////////////////////////////

nav {
  background-color: rgba(145,13,13,.8);
  color: white;
  padding: 45px 40px;

  text-transform: uppercase;
}

nav a {
  display: block;
  color: inherit;
  text-decoration: none;
}

nav figure {
  text-align: center;
}

nav figure img {
  border-radius: 50%;
  margin-bottom: 10px;
  width: 150px;
}

figcaption .title {
  font-size: 22px;
  font-weight: 500;
  color: inherit;
}

.links {
  margin: 45px 0;

  font-size: 14px;
  line-height: 30px;
}

.links a {
  color: rgba(255,255,255,.6);
  height: 30px; // prevents hover::after from increasing link height
}

.links a:hover, .icons i:hover {
  color: white;
}

.links a.current {
  color: white;
}

.links a.current::before {
  content: "";
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  border-top: 9px solid transparent;
  border-bottom: 9px solid transparent;
  border-right: 8px solid white;
  right: 0;
  transform: translateY( 4px );
}

.links a.current::after, .links a:hover::after {
  font-family: FontAwesome;
  content: " \f105 ";

  padding-left: 3px;
}

.social p {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.6);
}

.social a {
  display: inline-block;
}

.icons {
  font-size: 22px;
  color: rgba(255, 255, 255, 0.6);
}

// Main ///////////////////////////////////////////////////

main {
  background-color: white;
  padding: 45px;
}

main:not(.portfolio) {
  max-width: 750px;
}

main p {
  margin: 16px 0;
}

.general-assembly, .timeline-content a.general-assembly {
  color: #BB1E1E;
  text-decoration: none;
}

.general-assembly:hover, .timeline-content a.general-assembly:hover {
  text-decoration: underline;
}

// Home ////////////////////////////////////////////////////////////////////////

.container:before {
  content: '';
  height: 100vh;
  width: 100vw;
  background-image: url( <%= asset_path 'home_background.jpg' %> );
  background-position: 10% 25%;
  background-repeat: no-repeat;
  background-size: fill;
  position: fixed;
  left: 25%;
  filter: grayscale( 100% ) contrast( 50% );
  z-index: -2;
}

.container:after {
  content: "";
  background-image: url( <%= asset_path 'noise.png' %>);
  width: 100vw;
  // opacity: 0.9;
  z-index: -1;
}

main.home {
  background-color: transparent;
  padding-left: 80px;
  padding-top: 130px;
  text-shadow: 1px 1px 2px rgba( 0, 0, 0, 0.6 );
}

main.home h1, main.home p {
  color: white;
  text-transform: none;
}

main.home h1 {
  font-size: 3em;
  font-weight: 500;
}

main.home p {
  font-size: 2em;
  font-weight: 300;
}


// Projects //////////////////////////////////////////////

#timeline {
  display: grid;
  grid-template-areas: "time content";
  grid-template-columns: auto 1fr;

  margin-top: 16px;
}

.timeline-date {
  position: relative;
  border-right: 1px solid #ddd;
}

.timeline-date::after {
  position: absolute;
  content: " ";
  width: 5px;
  height: 5px;
  right: -3px;
  background-color: rgba(187,30,30,.8);
}

.timeline-date:first-child::after {
  top: 10px;
}

.timeline-date:not(:first-child)::after {
  top: 52px;
}

time {
  font-style: italic;
  text-align: right;
  color: #999;

  padding-right: 20px;
}

.timeline-content {
  display: grid;

  grid-template-columns: 1fr 1fr;

  margin-left: 30px;
  margin-bottom: 22px;
}

.timeline-content:nth-child(2) p {
  margin-top: 0;
}

.timeline-content:not(:nth-child(2)) {
  border-top: 1px solid #ddd;
}

.timeline-date:not(:first-child), .timeline-content:not(:nth-child(2)) {
  padding-top: 30px;
}

.timeline-date:not(:first-child) {
  line-height: 3;
}

.timeline-content h2 {
  font-size: 30px;
}

.timeline-content h2, .timeline-content a {
  color: #333;
  text-decoration: none;
}

.timeline-content a:hover {
  color: #BB1E1E;
}

.current {
  grid-column: span 2;
}

.project-text {
  padding-right: 30px;
}

.project-image {
  margin: auto;
}

.project-image img {
  max-width: 100%;
  max-height: 568px;
}

